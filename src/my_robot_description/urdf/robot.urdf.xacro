<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="world" />
  <material name="steve_skin">
    <color rgba="0.93 0.80 0.67 1.0" />
  </material>

  <material name="steve_shirt">
    <color rgba="0.40 0.65 0.95 1.0" />
  </material>

  <material name="steve_pants">
    <color rgba="0.20 0.30 0.60 1.0" />
  </material>

  <material name="steve_wheel_plate">
    <color rgba="0.30 0.32 0.35 1.0" />
  </material>

  <material name="steve_wheel">
    <color rgba="0.08 0.08 0.08 1.0" />
  </material>

  <material name="white">
    <color rgba="1 1 1 1" />
  </material>

  <material name="red">
    <color rgba="1 0 0 1" />
  </material>

  <link name="torso">
    <visual>
      <geometry>
        <box size="0.2 0.4 0.8" />
      </geometry>
      <material name="steve_shirt" />
    </visual>
  </link>

  <link name="head">
    <visual>
      <geometry>
        <sphere radius="0.18" />
      </geometry>
      <material name="steve_skin" />
    </visual>
    <visual>
      <origin xyz="-0.16 0.06 0.04" />
      <geometry>
        <sphere radius="0.025" />
      </geometry>
      <material name="white" />
    </visual>
    <visual>
      <origin xyz="-0.16 -0.06 0.04" />
      <geometry>
        <sphere radius="0.025" />
      </geometry>
      <material name="white" />
    </visual>
  </link>

  <link name="left_leg">
    <visual>
      <geometry>
        <box size="0.2 0.18 0.8" />
      </geometry>
      <material name="steve_pants" />
    </visual>
  </link>

  <link name="right_leg">
    <visual>
      <geometry>
        <box size="0.2 0.18 0.8" />
      </geometry>
      <material name="steve_pants" />
    </visual>
  </link>

  <link name="left_arm">
    <visual>
      <origin xyz="0 0 -0.3" />
      <geometry>
        <cylinder radius="0.1" length="0.6" />
      </geometry>
      <material name="steve_skin" />
    </visual>
  </link>

  <link name="right_arm">
    <visual>
      <origin xyz="0 0 -0.3" />
      <geometry>
        <cylinder radius="0.1" length="0.6" />
      </geometry>
      <material name="steve_skin" />
    </visual>
  </link>

  <joint name="left_leg_joint" type="fixed">
    <parent link="torso" />
    <child link="left_leg" />
    <origin xyz="0 0.11 -0.8" />
  </joint>
  <joint name="right_leg_joint" type="fixed">
    <parent link="torso" />
    <child link="right_leg" />
    <origin xyz="0 -0.11 -0.8" />
  </joint>
  <joint name="left_arm_joint" type="revolute">
    <parent link="torso" />
    <child link="left_arm" />
    <origin xyz="0 0.3 0.4" />
    <axis xyz="0 1 0" />
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2" />
  </joint>
  <joint name="right_arm_joint" type="revolute">
    <parent link="torso" />
    <child link="right_arm" />
    <origin xyz="0 -0.3 0.4" />
    <axis xyz="0 1 0" />
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2" />
  </joint>

  <joint name="head_and_torso" type="revolute">
    <parent link="torso" />
    <child link="head" />
    <origin xyz="0 0 0.58" />
    <axis xyz="0 0 1" />
    <limit lower="-0.785" upper="0.785" effort="2" velocity="0.4" />
  </joint>

  <xacro:macro name="wheel_plate_with_wheels" params="prefix parent side">

    <link name="${prefix}_plate">
      <visual>
        <geometry>
          <box size="0.6 0.18 0.2" />
        </geometry>
        <material name="steve_wheel_plate" />
      </visual>
    </link>

    <link name="${prefix}_wheel_back">
      <visual>
        <origin rpy="1.5708 0 0" />
        <geometry>
          <cylinder radius="0.2" length="0.05" />
        </geometry>
        <material name="steve_wheel" />
      </visual>
      <visual>
        <origin xyz="-0.19 ${side*0.05} 0" rpy="1.5708 0 0" />
        <geometry>
          <box size="0.02 0.04 0.05" />
        </geometry>
        <material name="red" />
      </visual>
    </link>
    <link name="${prefix}_wheel_front">
      <visual>
        <origin rpy="1.5708 0 0" />
        <geometry>
          <cylinder radius="0.17" length="0.05" />
        </geometry>
        <material name="steve_wheel" />
      </visual>
      <visual>
        <origin xyz="-0.16 ${side*0.05} 0" rpy="1.5708 0 0" />
        <geometry>
          <box size="0.02 0.035 0.05" />
        </geometry>
        <material name="red" />
      </visual>
    </link>

    <joint name="${prefix}_front_wheel_joint" type="continuous">
      <parent link="${prefix}_plate" />
      <child link="${prefix}_wheel_front" />
      <origin xyz="-0.2 ${side * 0.115} -0.03" />
      <axis xyz="0 1 0" />
    </joint>
    <joint name="${prefix}_back_wheel_joint" type="continuous">
      <parent link="${prefix}_plate" />
      <child link="${prefix}_wheel_back" />
      <origin xyz="0.2 ${side * 0.115} 0" />
      <axis xyz="0 1 0" />
    </joint>
    <joint name="${prefix}_plate_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}_plate" />
      <origin xyz="0 0 -0.5" />
    </joint>
  </xacro:macro>

  <xacro:wheel_plate_with_wheels prefix="left_leg" parent="left_leg" side="1" />

  <xacro:wheel_plate_with_wheels prefix="right_leg" parent="right_leg" side="-1" />

  <joint name="world_to_base" type="fixed">
    <parent link="world" />
    <child link="torso" />
    <origin xyz="0 0 1.5" />
  </joint>

</robot>