import os
from ament_index_python.packages import get_package_share_directory
from launch import LaunchDescription
from launch.actions import IncludeLaunchDescription
from launch.launch_description_sources import PythonLaunchDescriptionSource
from launch_ros.actions import Node
import xacro

def generate_launch_description():
    # 1. Helper Variables
    pkg_name = 'my_bot_description'
    file_subpath = 'urdf/robot.urdf.xacro'

    # 2. Process Xacro
    path_to_xacro = os.path.join(get_package_share_directory(pkg_name), file_subpath)
    robot_description_config = xacro.process_file(path_to_xacro)
    params = {'robot_description': robot_description_config.toxml()}

    # 3. Node: Robot State Publisher
    node_robot_state_publisher = Node(
        package='robot_state_publisher',
        executable='robot_state_publisher',
        output='screen',
        parameters=[params]
    )

    # 4. Include: Gazebo Launch
    gazebo_launch_path = os.path.join(
        get_package_share_directory('gazebo_ros'), 'launch', 'gazebo.launch.py')

    gazebo = IncludeLaunchDescription(
        PythonLaunchDescriptionSource([gazebo_launch_path])
    )

    # 5. Node: Spawn Entity (with Z-offset to prevent sinking)
    spawn_entity = Node(
        package='gazebo_ros', 
        executable='spawn_entity.py',
        arguments=['-topic', 'robot_description', 
                   '-entity', 'my_bot',
                   '-z', '0.1'],
        output='screen'
    )

    # 6. Return Launch Description
    return LaunchDescription([
        node_robot_state_publisher,
        gazebo,
        spawn_entity,
    ])
